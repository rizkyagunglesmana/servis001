<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="715dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp"
            android:background="#FFF5EE">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="117dp" app:srcCompat="@drawable/aagung"
                android:id="@+id/imageView"/>
        <TextView
                android:text="Rizky Agung Lesmana"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:textSize="23sp"
                android:layout_marginLeft="80dp" android:layout_marginTop="20dp"
                android:textColor="@android:color/background_dark"/>
        <TextView
                android:text="Universitas Teknologi Yogyakarta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:textSize="23sp"
                android:layout_marginLeft="18dp" android:layout_marginTop="5dp"
                android:textColor="@android:color/background_dark"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Facebook"
                    android:layout_width="199dp"
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/btn_facebook"

                    android:textAllCaps="true" android:textColor="@android:color/black"
                    android:backgroundTint="@android:color/darker_gray"
                    android:textSize="14sp" android:layout_height="62dp" android:drawableLeft="@drawable/hehe"/>
            <Button
                    android:text="Instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="62dp" android:id="@+id/btn_instagram" android:layout_weight="1"
                    android:textColor="@android:color/black" android:backgroundTint="@android:color/background_light"
                    android:drawableLeft="@drawable/sayaa"/>
        </LinearLayout>
        <TextView
                android:text="MP3 Player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:textColor="#090808"
                android:textSize="24sp" android:layout_marginLeft="130dp" android:layout_marginTop="25dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="62dp">
            <Button
                    android:text="Play"
                    android:layout_width="wrap_content"
                    style="?android:attr/borderlessButtonStyle"
                    android:drawableLeft="@drawable/ic_play_arrow_black_25dp"
                    android:layout_height="wrap_content" android:id="@+id/btn_play" android:layout_weight="1"
                    android:backgroundTint="@android:color/darker_gray"/>
            <Button
                    android:text="Pause"
                    android:layout_width="wrap_content"
                    style="?android:attr/borderlessButtonStyle"
                    android:drawableLeft="@drawable/ic_pause_black_24dp"
                    android:layout_height="wrap_content" android:id="@+id/btn_pause" android:layout_weight="1"/>
            <Button
                    android:text="Stop"
                    android:layout_width="wrap_content"
                    style="?android:attr/borderlessButtonStyle"
                    android:drawableLeft="@drawable/ic_stop_black_26dp"
                    android:layout_height="wrap_content" android:id="@+id/btn_stop" android:layout_weight="1"/>
        </LinearLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp" app:srcCompat="@drawable/bugi" android:id="@+id/imageView2"/>
    </LinearLayout>
</LinearLayout>